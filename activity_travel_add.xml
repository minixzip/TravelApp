<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2EDF3"
    android:orientation="vertical"
    tools:context=".TravelAddActivity">
    <include layout="@layout/toolbar_add"></include>

    <View
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/shadow"
        android:backgroundTint="#9FB8CC"
        android:layout_gravity="center"  />

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="-170dp"
        android:background="@drawable/solid_txt"
        android:backgroundTint="#FFFFFF"
        android:elevation="30dp"
        android:gravity="center"
        android:hint="여행 도시 입력" />

    <android.widget.Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/shadow"
        android:backgroundTint="#425D71"
        android:text="생성하기"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="-125dp"
        android:backgroundTint="#CEE7F3">

        <EditText
            android:id="@+id/periodEditText1"
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:background="@drawable/solid_txt"
            android:backgroundTint="#FFFFFF"
            android:hint="여행 첫날"
            android:textAlignment="center" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:text=" - "
            android:textColor="@color/white"
             />


        <EditText
            android:id="@+id/periodEditText2"
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:background="@drawable/solid_txt"
            android:backgroundTint="#FFFFFF"
            android:hint="여행 마지막날"
            android:textAlignment="center" />

    </LinearLayout>

    />


    />
</LinearLayout>